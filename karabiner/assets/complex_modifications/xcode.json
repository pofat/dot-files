          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": [
                "right_command"
              ]
            }
          ]
        }
      ]
    },
