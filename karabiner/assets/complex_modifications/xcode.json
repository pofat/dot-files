        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.apple\\.dt.Xcode$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "right_control"
              ]
            }
          },
          "to": [
