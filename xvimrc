set ignorecase
set wrapscan

set laststatus=0
set guioptions=

" fix cursor not shown in playground for XCode 7.1
set blinkcursor

noremap <D-[> <Esc>
inoremap <D-[> <Esc>

" go to next/previous func declaration header line
nnoremap ]] /^[-+]|func<Cr>
nnoremap [[ ?^[-+]|func<Cr>

" jump between panes
nnoremap gl <C-w>l
nnoremap gh <C-w>h

" move in bigger stride
noremap J     8j
noremap K     8k
noremap H     <C-u>
noremap L     <C-d>

nnoremap zh    :xhelp<Cr>

" sensible Y
nnoremap Y y$

nnoremap ]q    :ni<Cr>
nnoremap [q    :pi<Cr>
nnoremap ]c    :nc<Cr>
nnoremap [c    :pc<Cr>
nnoremap ]j    :nj<Cr>
nnoremap [j    :pj<Cr>

" insert mode cursor move
inoremap <C-h> <left>
inoremap <C-j> <down>
inoremap <C-k> <up>
inoremap <C-l> <right>
inoremap <C-a> <C-o>^
inoremap <C-e> <C-o>$

" line moving & swapping
nnoremap [<Space> O<Esc>j
nnoremap ]<Space> o<Esc>k
nnoremap ]e ddp
nnoremap [e ddkP

" clear all
nnoremap cae <Esc><Esc>ggcG

" swiftforamt
nnoremap \af mp:xcmenucmd Format Entire File<Cr>`p
nnoremap ,f mp:xcmenucmd Format Entire File<Cr>`p

nnoremap <Backspace>w :xcmenucmd Save<Cr>
nnoremap <Backspace>a :xcmenucmd Save All<Cr>

nnoremap <Space>e     :xcmenucmd Show Standard Editor<Cr>
nnoremap <Space>a     :xcmenucmd Show Assistant Editor<Cr>
nnoremap <Space>p     :xcmenucmd Show Project Navigator<Cr>
nnoremap <Space>s     :xcmenucmd Show Symbol Navigator<Cr>
nnoremap <Space>f     :xcmenucmd Show Find Navigator<Cr>
nnoremap <Space>i     :xcmenucmd Show Issue Navigator<Cr>
nnoremap <Space>d     :xcmenucmd Show Debug Navigator<Cr>
nnoremap <Space>b     :xcmenucmd Show Breakpoint Navigator<Cr>
nnoremap <Space>r     :xcmenucmd Show Report Navigator<Cr>

nnoremap <Space>h     :xccmd     toggleNavigatorsVisibility<Cr>
nnoremap <Space>j     :xccmd     toggleDebuggerVisibility<Cr>
nnoremap <Space>l     :xccmd     toggleUtilitiesVisibility<Cr>
nnoremap <Space>u     :xccmd     toggleUtilitiesVisibilityAlternate<Cr>

nnoremap zi           :xccmd     toggleIssueShown<Cr>
nnoremap zm           :xcmenucmd toggleMessageBubbles<Cr>
nnoremap zb           :xcmenucmd toggleBreakpointAtCurrentLine<Cr>


" build, run, test

" build
nnoremap ,b :xcmenucmd Build<Cr>
" build for testing
nnoremap ,c :xcmenucmd Testing<Cr>

" build & run
nnoremap ,r :xcmenucmd Run<Cr>
" run without build (run again)
nnoremap ,,r :xcmenucmd Run Without Building<Cr>

" build & test
nnoremap ,t :xcmenucmd Test<Cr>
" build & test last test case
nnoremap ,,t :xcmenucmd Test Again<Cr>
" test last test case without building
nnoremap ,x :xcmenucmd Test Without Building<Cr>

nnoremap <Backspace>r :xcmenucmd Run<Cr>
nnoremap <Backspace>t :xcmenucmd Test<Cr>

