#!/usr/bin/env bash
set -euo pipefail

source ~/Git/dot-files/bash/lib/jack

tput civis
trap 'tput cnorm' EXIT

# client size
set +u
if [[ -n "$TMUX" ]]; then
  client_width="$(tmux list-clients -t '.' -F '#{client_width}')"
  client_height="$(tmux list-clients -t '.' -F '#{client_height}')"
else
  client_height=$(tput lines)
  client_width=$(tput cols)
fi
set -u

session_name='RandomUser'
if tmux has-session -t ${session_name} &>/dev/null; then
  echo "session [${session_name}] already exisits, kill it!"
  tmux kill-session -t "${session_name}"
fi

#
# window: Edit
#
jackProgress 'Creating window [Main] ...'

root="${HOME}/Develop/Apple/Frameworks/RandomUser"
window_name='Main'
window="${session_name}:${window_name}"
mkdir -p "${root}" &>/dev/null
tmux new-session       \
  -s "${session_name}" \
  -n "${window_name}"  \
  -x "$client_width"   \
  -y "$client_height"  \
  -c "${root}"         \
  -d
sleep 0.2
tmux send-keys -t "${window}" "
vv -O ${session_name}.podspec Example/Podfile
"

jackEndProgress
tmux select-window -t "${session_name}:1.1"
echo "[${session_name}]"
tmux list-window -t "${session_name}" -F ' - #W'
