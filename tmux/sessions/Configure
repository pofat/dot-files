#!/usr/bin/env bash
set -euo pipefail

# client size
set +u
if [[ -n "$TMUX" ]]; then
  client_width="$(tmux list-clients -t '.' -F '#{client_width}')"
  client_height="$(tmux list-clients -t '.' -F '#{client_height}')"
else
  client_width=$(tput lines)
  client_height=$(tput cols)
fi
set -u

session_name='Configure'
if tmux has-session -t ${session_name} &>/dev/null; then
  echo "session [${session_name}] already exisits, kill it!"
  tmux kill-session -t "${session_name}"
fi


#
# window: Inbox
#

root="${HOME}/Git/dot-files"
window_name='Inbox'
window="${session_name}:${window_name}"
tmux new-session       \
  -s "${session_name}" \
  -n "${window_name}"  \
  -x "$client_width"   \
  -y "$client_height"  \
  -c "${root}"         \
  -d

#
# window: Neovim
#

root="${HOME}/Git/vim-config"
window_name='Neovim'
window="${session_name}:${window_name}"
tmux new-window              \
  -a                         \
  -t "${session_name}:{end}" \
  -n "${window_name}"        \
  -c "${root}"               \
  -d
sleep 1
tmux send-keys -t "${window}" "
vv vimrc
"

#
# window: Hammerspoon
#

root="${HOME}/Git/dot-files/hammerspoon"
window_name='Hammerspoon'
window="${session_name}:${window_name}"
tmux new-window              \
  -a                         \
  -t "${session_name}:{end}" \
  -n "${window_name}"        \
  -c "${root}"               \
  -d
tmux send-keys -t "${window}" "
vv init.lua
"

#
# window: Tmux
#

root="${HOME}/Git/dot-files/tmux"
window_name='Tmux'
window="${session_name}:${window_name}"
tmux new-window              \
  -a                         \
  -t "${session_name}:{end}" \
  -n "${window_name}"        \
  -c "${root}"               \
  -d
tmux send-keys -t "${window}" "
vv tmux.conf
"

#
# window: Tmux Sessions
#

root="${HOME}/Git/dot-files/tmux/sessions"
window_name='Tmux Sessions'
window="${session_name}:${window_name}"
tmux new-window              \
  -a                         \
  -t "${session_name}:{end}" \
  -n "${window_name}"        \
  -c "${root}"               \
  -d
tmux send-keys -t "${window}" "
vv -c 'source .vimrc.local' *
"

tmux split-window  \
  -t "${window}.1" \
  -h               \
  -p 30            \
  -c "${root}"

tmux select-window -t "${session_name}:1.1"
echo "[${session_name}]"
tmux list-window -t "${session_name}" -F ' - #W'

