# vim: filetype=zsh


# environment GOPATH
export GOPATH=${HOME}/Dev/go
mdx_path_push_back "${GOPATH}/bin"

# environment GOROOT
go_path='/usr/local/bin/go'

if [[ -e "$go_path" ]]; then
  export GOROOT=$($go_path env GOROOT)
else
  echo "\e[31mshell/go_env: missing go in ${go_path}"
fi

unset go_path
