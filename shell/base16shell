#!/bin/bash

if [ ! -d "${MDX_REPOS_ROOT}/base16-shell" ]; then
  echo "\e[33mneed [base16-shell], installing ...\e[0m"
  git clone "https://github.com/chriskempson/base16-shell.git" \
    "${MDX_REPOS_ROOT}/base16-shell"
fi

basen() {
  local -a colros
  colors=( $( 'ls' "${MDX_REPOS_ROOT}/base16-shell"/base16-*.sh ) )

  if [ -n "${colors[*]}" ]; then
    local i=$(( RANDOM % ${#colors[@]} ))
    local colorscheme=${colors[i]}
    source ${colorscheme}
    echo "\e[33m[shell colorscheme]: \e[5;34m$(basename ${colorscheme} .sh)\e[0m"
  fi
}

# vim: filetype=zsh
